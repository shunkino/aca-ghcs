{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "16897723357663810231"
    }
  },
  "parameters": {
    "projectName": {
      "type": "string",
      "metadata": {
        "description": "Project prefix used to build resource names."
      }
    },
    "targetEnv": {
      "type": "string",
      "metadata": {
        "description": "Logical environment name (for example dev, qa, prod)."
      }
    },
    "containerImageName": {
      "type": "string",
      "metadata": {
        "description": "Container image repository name within ACR."
      }
    },
    "containerImageTag": {
      "type": "string",
      "metadata": {
        "description": "Image tag to deploy to the container app. Ensure this tag exists in the registry before running the template."
      }
    },
    "resourceTags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags applied to the container app deployment."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for the container app. Defaults to the resource group location."
      }
    }
  },
  "variables": {
    "projectSegment": "[if(empty(trim(parameters('projectName'))), 'aca', toLower(replace(parameters('projectName'), ' ', '')))]",
    "envSegment": "[if(empty(trim(parameters('targetEnv'))), 'env', toLower(replace(parameters('targetEnv'), ' ', '')))]",
    "baseName": "[toLower(replace(format('{0}-{1}', variables('projectSegment'), variables('envSegment')), '--', '-'))]",
    "namingSeed": "[uniqueString(subscription().id, resourceGroup().name)]",
    "acrName": "[toLower(take(format('{0}{1}', replace(variables('baseName'), '-', ''), variables('namingSeed')), 50))]",
    "managedEnvName": "[toLower(take(format('{0}-env', variables('baseName')), 63))]",
    "containerAppName": "[toLower(take(format('{0}-app', variables('baseName')), 63))]",
    "acrIdentityName": "[toLower(take(format('{0}-acr-mi', variables('baseName')), 63))]"
  },
  "resources": [
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "[variables('containerAppName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('resourceTags')]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[format('{0}', resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('acrIdentityName')))]": {}
        }
      },
      "properties": {
        "environmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('managedEnvName'))]",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": true,
            "targetPort": 8080,
            "transport": "auto",
            "allowInsecure": false
          },
          "registries": [
            {
              "server": "[reference(resourceId('Microsoft.ContainerRegistry/registries', variables('acrName')), '2023-07-01').loginServer]",
              "identity": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('acrIdentityName'))]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "app",
              "image": "[format('{0}/{1}:{2}', reference(resourceId('Microsoft.ContainerRegistry/registries', variables('acrName')), '2023-07-01').loginServer, parameters('containerImageName'), parameters('containerImageTag'))]",
              "env": [
                {
                  "name": "APP_NAME",
                  "value": "[parameters('projectName')]"
                },
                {
                  "name": "APP_ENVIRONMENT",
                  "value": "[parameters('targetEnv')]"
                },
                {
                  "name": "APP_VERSION",
                  "value": "[parameters('containerImageTag')]"
                }
              ],
              "resources": {
                "cpu": "[json('0.25')]",
                "memory": "0.5Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 3
          }
        }
      }
    }
  ],
  "outputs": {
    "containerAppName": {
      "type": "string",
      "metadata": {
        "description": "Container app resource name."
      },
      "value": "[variables('containerAppName')]"
    },
    "containerAppFqdn": {
      "type": "string",
      "metadata": {
        "description": "Fully qualified domain name for ingress."
      },
      "value": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppName')), '2024-03-01').configuration.ingress.fqdn]"
    },
    "containerImage": {
      "type": "string",
      "metadata": {
        "description": "Default image reference configured on the container app."
      },
      "value": "[format('{0}/{1}:{2}', reference(resourceId('Microsoft.ContainerRegistry/registries', variables('acrName')), '2023-07-01').loginServer, parameters('containerImageName'), parameters('containerImageTag'))]"
    },
    "containerAppAcrPrincipalId": {
      "type": "string",
      "metadata": {
        "description": "User-assigned managed identity principal ID used for ACR pulls."
      },
      "value": "[reference(resourceId('Microsoft.App/containerApps', variables('containerAppName')), '2024-03-01', 'full').identity.userAssignedIdentities[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('acrIdentityName'))].principalId]"
    }
  }
}